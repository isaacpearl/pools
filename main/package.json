{
	"name": "electron-quick-start",
	"version": "1.0.0",
	"description": "A minimal Electron application",
	"main": "main.js",
	"build": {
		"appId": "com.httpslocalhost",
		"mac": {
			"category": "public.app-category.developer-tools"
		},
		"productName": "HTTPSLocalhost",
		"extraResources": [
			"tmp/**/*",
			"data/*.db",
			"build/**/*"
		],
		"files": [
			"./**/*",
			"./main.js"
		]
	},
	"scripts": {
		"start": "NODE_ENV=dev nodemon --watch ./**/* --watch . --exec 'electron .'",
		"install": "electron-rebuild .",
		"dist": "rm -rf dist/; NODE_ENV=prod electron-builder",
		"build:renderer": "cd ../renderer; npm run build; cd ../main; cp -r ../renderer/build ./build/html"
	},
	"repository": "https://github.com/isaacpearl/pools",
	"keywords": [
		"music",
		"eurorack",
		"crow",
		"monome"
	],
	"author": "Isaac Pearl",
	"license": "CC0-1.0",
	"devDependencies": {
		"electron": "^5.0.8",
		"electron-builder": "^21.1.5",
		"electron-rebuild": "^1.8.5"
	},
	"dependencies": {
		"@serialport/bindings": "^2.0.8",
		"nodemon": "^1.19.1",
		"parser-readline": "^1.0.2",
		"readline": "^1.3.0",
		"serial": "^0.0.9",
		"serialport": "^7.1.5"
	}
}
